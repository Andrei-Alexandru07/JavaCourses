<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Label?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="mConcurrencyInJava.hJavaFXBackgroundTasks.Controller"
          hgap="10" vgap="10" alignment="center">
    <Button text="Get Employee Names" onAction="#buttonPressed"
            GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <ListView fx:id="listView" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <ProgressBar fx:id="progressBar" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label fx:id="progressLabel" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

</GridPane>
